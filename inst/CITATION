citHeader("To cite lrc in publications use:")

citEntry(entry = "Manual",
  title        = "{lrc: Logistic Regression Classification (LRC) with an arbitrary loss function in R}",
  author       = personList(as.person("Landon H. Sego"), as.person("Alexander M. Venzin"),as.person("John A. Ramey")),
  organization = "{Pacific Northwest National Laboratory}",
  address      = "Richland, WA",
  year         = "2016",
  url          = "http://github.com/pnnl/lrc",

  textVersion  =
  paste("Sego LH, Venzin AM, Ramey JA. 2016. lrc: Logistic Regression Classification (LRC) with an arbitrary loss",
        "function in R Pacific Northwest National Laboratory. http://github.com/pnnl/Smisc.")
)
